from random import randrange
board=[1,2,3],[4,"X",6],[7,8,9,]

def display_board(board):
    solid=("+-------+-------+-------+")
    spaces=("|       |       |       |")
    print(solid,spaces,sep="\n")
    print("|   {}   |   {}   |   {}   |".format(board[0][0],board[0][1],board[0][2]))
    print(spaces,solid,spaces,sep="\n")
    print("|   {}   |   {}   |   {}   |".format(board[1][0],board[1][1],board[1][2]))
    print(spaces,solid,spaces,sep="\n")
    print("|   {}   |   {}   |   {}   |".format(board[2][0],board[2][1],board[2][2]))
    print(spaces,solid,sep="\n")

def enter_move(board):
    move=int(input("Where do you want to place your 'O'? "))
    if move<1 or move>9:
        enter_move(board)
    if move<4 and move>0:
        if board[0][move-1] not in ("X","O"):
            board[0][move-1]="O"
        else:
            print("Please choose another position that isn't already played")
    if move<7 and move>3:
        if board[1][move-4] not in ("X","O"):
            board[1][move-4]="O"
        else:
            print("Please choose another position that isn't already played")
    if move<10 and move>6:
        if board[2][move-7] not in ("X","O"):
            board[2][move-7]="O"
        else:
            print("Please choose another position that isn't already played")

